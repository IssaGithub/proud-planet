---
// Header Komponente für Olivenöl Shop
---

<header class="bg-white/95 backdrop-blur-sm border-b border-stone-200 sticky top-0 z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16 md:h-20">
      <!-- Logo -->
      <div class="flex-shrink-0">
        <a href="/" class="flex items-center space-x-2">
          <div class="w-10 h-10 bg-gradient-to-br from-amber-600 to-amber-700 rounded-full flex items-center justify-center">
            <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2L4 7v10l8 5 8-5V7l-8-5z"/>
            </svg>
          </div>
          <span class="font-playfair text-xl md:text-2xl font-semibold text-stone-900">
            Olive Gold
          </span>
        </a>
      </div>

      <!-- Desktop Navigation -->
      <nav class="hidden md:flex items-center space-x-8">
        <a href="/" class="text-stone-700 hover:text-amber-700 font-medium transition-colors duration-200">
          Home
        </a>
        <a href="/shop" class="text-stone-700 hover:text-amber-700 font-medium transition-colors duration-200">
          Shop
        </a>
        <a href="/about" class="text-stone-700 hover:text-amber-700 font-medium transition-colors duration-200">
          Über uns
        </a>
        <a href="/contact" class="text-stone-700 hover:text-amber-700 font-medium transition-colors duration-200">
          Kontakt
        </a>
      </nav>

      <!-- Cart & Mobile Menu -->
      <div class="flex items-center space-x-4">
        <!-- Cart Button -->
        <button class="relative p-2 text-stone-700 hover:text-amber-700 transition-colors duration-200">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4m0 0L7 13m0 0l-1.5 6H19"/>
          </svg>
          <span class="absolute -top-1 -right-1 bg-amber-600 text-white text-xs rounded-full h-5 w-5 flex items-center justify-center">
            0
          </span>
        </button>

        <!-- Mobile Menu Button -->
        <button class="md:hidden p-2 text-stone-700 hover:text-amber-700 transition-colors duration-200" id="mobile-menu-button">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Navigation -->
    <div class="md:hidden border-t border-stone-200 py-4 hidden" id="mobile-menu">
      <nav class="flex flex-col space-y-3">
        <a href="/" class="text-stone-700 hover:text-amber-700 font-medium transition-colors duration-200 py-2">
          Home
        </a>
        <a href="/shop" class="text-stone-700 hover:text-amber-700 font-medium transition-colors duration-200 py-2">
          Shop
        </a>
        <a href="/about" class="text-stone-700 hover:text-amber-700 font-medium transition-colors duration-200 py-2">
          Über uns
        </a>
        <a href="/contact" class="text-stone-700 hover:text-amber-700 font-medium transition-colors duration-200 py-2">
          Kontakt
        </a>
      </nav>
    </div>
  </div>
</header>

<script>
  // Mobile Menu Toggle
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  
  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script> 